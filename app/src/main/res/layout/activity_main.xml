<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/avatarPig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/pig_savings_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="TODO" />

    <TextView
        android:id="@+id/contentPig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text = "Привет!"
        app:layout_constraintStart_toEndOf="@id/avatarPig"
        app:layout_constraintTop_toTopOf="@id/avatarPig" />

    <TextView
        android:id="@+id/publishedPig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        tools:text = "Дата"
        app:layout_constraintStart_toEndOf="@id/avatarPig"
        app:layout_constraintTop_toBottomOf="@id/contentPig" />


    <ImageButton
        android:id="@+id/avatarRabbit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing"
        android:src="@drawable/rabbit_cruelty_free_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/avatarPig"
        android:contentDescription="TODO" />

    <TextView
        android:id="@+id/contentRabbit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text = "Привет!"
        app:layout_constraintStart_toEndOf="@id/avatarRabbit"
        app:layout_constraintTop_toTopOf="@id/avatarRabbit" />

    <TextView
        android:id="@+id/publishedRabbit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        tools:text = "Дата"
        app:layout_constraintStart_toEndOf="@id/avatarRabbit"
        app:layout_constraintTop_toBottomOf="@id/contentRabbit" />

    <ImageButton
        android:id="@+id/avatarWoman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing"
        android:src="@drawable/woman"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/avatarRabbit"
        android:contentDescription="TODO" />

    <TextView
        android:id="@+id/contentWoman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text = "Привет!"

        app:layout_constraintStart_toEndOf="@id/avatarWoman"
        app:layout_constraintTop_toTopOf="@id/avatarWoman" />

    <TextView
        android:id="@+id/publishedWoman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        tools:text = "Дата"
        app:layout_constraintStart_toEndOf="@id/avatarWoman"
        app:layout_constraintTop_toBottomOf="@id/contentWoman" />

</androidx.constraintlayout.widget.ConstraintLayout>